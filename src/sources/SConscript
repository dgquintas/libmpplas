    R.cpp
    RedModular.cpp
    Semillero.cpp
    SimbolosLegendre.cpp
    Trascendentes.cpp
    utils.cpp
    Z.cpp
    Z_n.cpp
    """)

lib = myenv.SharedLibrary('numth', files)

env.Append(LIBPATH = [Dir('.')])
Export('env')
SConscript(dirs='tests')
