Import('env')

myenv = env.Copy()
myenv.Append( CPPPATH=['nucleo'] )

files = Split("""
    CRT.cpp
    Factor.cpp
    Funciones.cpp
    GCD.cpp
    Hash.cpp
    LCM.cpp
    mp.cpp
    Perfil.cpp
    Potencia.cpp
    Primos.cpp
