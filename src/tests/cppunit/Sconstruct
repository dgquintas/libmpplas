LIBNUMTH_PATH = '../../'

env = Environment(CPPPATH=[LIBNUMTH_PATH, '/usr/include/qt3'],
                  CCFLAGS=['-g'],
                  LIBS=['numth','qt-mt', 'pthread', 'm', 'X11', 'Xext','qttestrunner' ],
                  LIBPATH=[LIBNUMTH_PATH])

env.ParseConfig('cppunit-config --libs')

files = Split("""
    ZTest.cpp
    main.cpp
    """)

env.Program('runTests', files)
