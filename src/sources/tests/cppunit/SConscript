Import('testingEnv')

def CheckCppunit(context):
  context.Message('Checking for Cppunit... ')
  ret = context.TryAction( Action('cppunit-config --libs') )
  context.Result(ret[0])
  return ret[0]

if not testingEnv.GetOption('clean'):
  conf = Configure(testingEnv, custom_tests = {'CheckCppunit':CheckCppunit} )
  if not conf.CheckCppunit():
    print 'Cppunit is not installed. Exiting...'
    Exit(1)
  testingEnv = conf.Finish()


testingEnv.ParseConfig('cppunit-config --libs')

files = Split("""
    ZTest.cpp
    main.cpp
    """)

testingEnv.Program('runTests', files)
